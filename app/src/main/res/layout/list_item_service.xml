<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/rounded_background_service"
    android:orientation="vertical"
    android:padding="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="#20250327001"
                android:textColor="#020202"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clientCI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Cliente: Nombre Cliente"
                android:textColor="#020202"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/motorcycleLicensePlate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Motocicleta: Modelo Motocicleta Placa: #placa"
                android:textColor="#020202"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Motivos manifestados: El motorizado presenta una sonido en la parte superior del motor"
                android:textColor="#020202"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/employeeCI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_background"
                android:fontFamily="@font/roboto"
                android:text="Técnico Responsable: Nombre Técnico"
                android:textColor="#020202"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/editButtom"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center|right|end"
            app:srcCompat="@drawable/edit_icon" />

        <ImageView
            android:id="@+id/continueBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right|end"
            app:srcCompat="@drawable/continue_icon" />

    </LinearLayout>

</LinearLayout>